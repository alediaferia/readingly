{
  "manifest_version": 2,

  "name": "Readingly",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
  "background": {
    "scripts": ["js/setup.js", "js/readingly.js"],
    "persistent": true
  },
  "page_action": {
    "default_icon": {
      "19": "icon.png",
      "32": "icon.png"
    },
    "default_title": "Readingly",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "https://ajax.googleapis.com/",
    "https://www.readability.com/",
    "https://*.twitter.com/",
    "https://*.thread0.me/"
  ]
}
